= simple_form_for @report do |f|
  = f.input :name
  = f.fields_for :report_fields do |builder|
    %fieldset
      = builder.label :content, "ServerAttribute field"
      = builder.collection_select :select_attribute, ServerAttribute.group(:name), :name, :name
      = link_to "remove", '#', class: "remove_fields btn btn-danger"
  = link_to_add_report_fields "Add Conditions", f, :report_fields
  = link_to "back", :back, class: "btn btn-danger"
  = f.submit
