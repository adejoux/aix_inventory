- model_class = HealthCheck
.row
  .span12
    .page-header
      %h2=@hc.name + ' on ' + @hc.srv.name

.row
  .span9.offset2
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:server_name)
          %th= model_class.human_attribute_name(:description)
          %th= model_class.human_attribute_name(:output)
          %th= model_class.human_attribute_name(:info)
          %th= model_class.human_attribute_name(:return_code)
          %th= model_class.human_attribute_name(:hc_erors)
          %th= model_class.human_attribute_name(:updated_at)

      %tbody
        - @hcs.each do |hc|
          %tr
            %td= hc.name
            %td= hc.srv.name
            %td= hc.description.to_s.html_safe
            %td= hc.output.html_safe
            %td= hc.info
            %td= hc.return_code
            %td= hc.hc_errors
            %td= hc.updated_at
