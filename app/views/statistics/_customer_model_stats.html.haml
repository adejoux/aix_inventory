%h2= "#{current_user.customer_scope} models statistics"
= content_tag :div, "", id: "customer_models_chart", data: {customer_models: customer_models_chart_data}

%table{ :id => "model_datatable", :class => "table table-striped table-bordered" }
  %thead
    %tr
      %th models
      %th models #
    %tbody
      - customer_models_table_data.each do |entry|
        %tr
          %td= entry.sys_model
          %td= entry.count_sys_serial
