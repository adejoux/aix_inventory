%h2= "#{current_user.customer_scope} releases statistics"
= content_tag :div, "", id: "customer_releases_chart", data: {customer_releases: customer_releases_chart_data}

%table{ :id => "release_datatable", :class => "table table-striped table-bordered" }
  %thead
    %tr
      %th release
      %th partitions #
    %tbody
      - customer_releases_table_data.map do |entry|
        %tr
          %td= entry[0]
          %td= entry[1]


