- model_class = AixAlert
.row
  .span6.offset4
    .page-header
      %h1=t '.title', :default => model_class.model_name.human
    %p
      %strong= model_class.human_attribute_name(:alert_type) + ':'
      %br
      = @aix_alert.alert_type
    %p
      %strong= model_class.human_attribute_name(:check) + ':'
      %br
      = @aix_alert.check
    %p
      %strong= model_class.human_attribute_name(:valid_status) + ':'
      %br
      = @aix_alert.valid_status
    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), aix_alerts_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_aix_alert_path(@aix_alert), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), aix_alert_path(@aix_alert), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
