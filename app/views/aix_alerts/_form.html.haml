= form_for @aix_alert, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :alert_type, :class => 'control-label'
    .controls
      = f.text_field :alert_type, :class => 'text_field'
  .control-group
    = f.label :check, :class => 'control-label'
    .controls
      = f.text_field :check, :class => 'text_field'
  .control-group
    = f.label :valid_status, :class => 'control-label'
    .controls
      = f.text_field :valid_status, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), aix_alerts_path, :class => 'btn btn-inverse'
