- unless @server.file_systems.nil?
  %h2 filesystems
  %table.table.table-bordered
    %thead
      %tr
        %th mount point
        %th device
        %th size
        %th free space
    %tbody
      - @server.file_systems.each do |fs|
        %tr
          %td= fs.mount_point
          %td= fs.device
          %td= fs.size
          %td= fs.free
