.row-fluid
  .span3.bs-docs-sidebar
    #sidemenu.affix
      %h2= @server.hostname
      %span.label.label-info run date
      %strong= @server.run_date
      %ul.nav.nav-list.bs-docs-sidenav
        %li=link_to "Release", "#release"
        %li=link_to "lpar", "#lpar" unless @server.lparstat.nil?
        %li=link_to "volume groups", "#volume_groups" unless @server.volume_groups.nil?
        %li=link_to "filesystems", "#filesystems" unless @server.file_systems.nil?
        %li=link_to "ip addresses", "#ip_addresses" unless @server.ip_addresses.empty?
        %li=link_to "softwares", "#softwares" unless @server.softwares.empty?
        %li=link_to "hardware", "#hardware"
        %li=link_to "san", "#san" unless @server.wwpns.nil?
        %li=link_to "properties", "#properties"
        %li=link_to "security", "#security" unless @server.linux_security_fixes.nil?
      %br
      = link_to 'back', servers_path, :class => "btn btn-primary"
      - if current_user.role == "admin"
        = link_to 'edit', edit_server_path(@server), :class => "btn btn-danger"
  .span9
    #release
      =render 'release'
    #lpar
      =render 'lpar'
    #volume_groups
      =render 'volume_groups'
    #filesystems
      =render 'filesystems'
    #ip_addresses
      =render 'ip_address'
    #softwares
      =render 'softwares'
    #hardware
      =render 'hardware'
    #san
      =render 'san'
    #properties
      =render 'properties'
    #security
      =render 'linux_sec_fix'
