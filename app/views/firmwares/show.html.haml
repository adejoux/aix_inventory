- model_class = Firmware
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:model) + ':'
  %br
  = @firmware.model
%p
  %strong= model_class.human_attribute_name(:recommended) + ':'
  %br
  = @firmware.recommended

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), firmwares_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_firmware_path(@firmware), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), firmware_path(@firmware), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
