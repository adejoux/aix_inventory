= form_for @firmware, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :model, :class => 'control-label'
    .controls
      = f.text_field :model, :class => 'text_field'
  .control-group
    = f.label :recommended, :class => 'control-label'
    .controls
      = f.text_field :recommended, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), firmwares_path, :class => 'btn'
