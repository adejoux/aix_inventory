- model_class = SanAlert
.row
  .span12
    .page-header
      %h1 SAN ALERTS

.row
  .span9.offset2
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th= model_class.human_attribute_name(:alert_type)
          %th= model_class.human_attribute_name(:fabric1)
          %th= model_class.human_attribute_name(:fabric2)
          - if can? :manage, SanAlert
            %th=t '.actions', :default => t("helpers.actions")
      %tbody
        - @san_alerts.each do |san_alert|
          %tr
            %td= san_alert.alert_type
            %td= san_alert.fabric1
            %td= san_alert.fabric2
            - if can? :manage, SanAlert
              %td
                = link_to t('.edit', :default => t("helpers.links.edit")), edit_san_alert_path(san_alert), :class => 'btn btn-mini'
                = link_to t('.destroy', :default => t("helpers.links.destroy")), san_alert_path(san_alert), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

    - if can? :manage, SanAlert
      = link_to t('.new', :default => t("helpers.links.new")), new_san_alert_path, :class => 'btn btn-primary'

