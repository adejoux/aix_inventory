= form_for @san_alert, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :alert_type, :class => 'control-label'
    .controls
      = f.text_field :alert_type, :class => 'text_field'
  .control-group
    = f.label :fabric1, :class => 'control-label'
    .controls
      = f.text_field :fabric1, :class => 'text_field'
  .control-group
    = f.label :fabric2, :class => 'control-label'
    .controls
      = f.text_field :fabric2, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), san_alerts_path, :class => 'btn btn-inverse'
