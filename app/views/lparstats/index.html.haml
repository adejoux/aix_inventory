.row
  .span12
    .page-header
      %h1 PARTITIONS INFORMATIONS
.row
  .span3.bs-docs-sidebar
    %h2 Views
    %ul.nav.nav-list.bs-docs-sidenav
      %li=link_to 'servers', servers_path
      %li=link_to 'hardwares', hardwares_path
      %li.active=link_to 'partitions', lparstats_path
  .span9
    %h2 Advanced search
    = search_form_for @search, :url=> search_lparstats_path, :html => {:class => "form-inline"}, method: :post do |f|
      = f.condition_fields do |c|
        = render "condition_fields", f: c
      = link_to_add_fields "Add Conditions", f, :condition
      .form-actions
        =f.submit "Search", :class => "btn btn-success"
        =f.submit "Excel Export", :class => "btn btn-warning", :name => 'export'
        = link_to "Reset", servers_path({:clear => 'yes'}), :class => "btn btn-primary"
.row
  .span12        
    %table{ :id => "lpar_datatable", :class => "table table-striped table-bordered", :data => { :source => "#{ lparstats_url(format: "json") }" } }
      %thead
        %tr
          %th{:colspan => 9 } general
          %th{:colspan => 9 } profile
        %tr
          %th{:colspan => 4 } customer
          %th{:colspan => 2 } mode
          %th{:colspan => 3 } online
          %th{:colspan => 3 } vcpus
          %th{:colspan => 3 } EC
          %th{:colspan => 3 } memory
        %tr
          %th name
          %th model
          %th serial
          %th partition
          %th type
          %th mode
          %th vcpu
          %th ec
          %th mem
          %th min
          %th des
          %th max
          %th min
          %th des
          %th max
          %th min
          %th des
          %th max
      %tbody
