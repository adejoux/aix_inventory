= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control_group
    .control-label
      customer
    .controls
      =f.collection_select :customer_scope, Server.group(:customer).select("customer"), :customer, :customer, :prompt => true, :include_blank => true
      = f.submit "Update", :class => 'btn btn-primary'