<% url = AixInventory::Application.routes.url_helpers %>
<%web_root = APP_CONFIG['web_root'] %>

ready =->
  $('#srv_datatable').dataTable
    bJQueryUI: true
    sPaginationType: "bootstrap"
    sDom: 'T<"clear"><"fg-toolbar ui-widget-header ui-corner-tl ui-corner-tr ui-helper-clearfix"lfr>t<"fg-toolbar ui-widget-header ui-corner-bl ui-corner-br ui-helper-clearfix"ip>'
    bProcessing: true
    bServerSide: true
    bFilter: false
    fnRowCallback: (nRow, aData, iDisplayIndex, iDisplayIndexFull) ->
                     $('td:eq(0)', nRow).html( '<a href="<%= web_root + url.quick_search_servers_path %>?type=customer&search=' + aData[0]  + '">' + aData[0] + '</a>' )
                     $('td:eq(1)', nRow).html( '<a href="<%= web_root + url.quick_search_servers_path %>?type=hostname&search=' + aData[1]  + '">' + aData[1] + '</a>' )
                     $('td:eq(3)', nRow).html( '<a href="<%= web_root + url.quick_search_servers_path %>?type=os_type&search=' + aData[2]  + '">' + aData[2] + '</a>' )
                     $('td:eq(2)', nRow).html( '<a href="<%= web_root + url.quick_search_servers_path %>?type=os_version&search=' + aData[3]  + '">' + aData[3] + '</a>' )
    sAjaxSource: $('#srv_datatable').data('source')
  $('.datatable').dataTable
    bJQueryUI: true
    sPaginationType: "bootstrap"
$(document).ready(ready)
$(document).on('page:load', ready)
