<% url = AixInventory::Application.routes.url_helpers %>
<% web_root = APP_CONFIG['web_root'] %>

ready =->
  $('#san_datatable').dataTable
    bJQueryUI: true
    sPaginationType: "bootstrap"
    sDom: 'T<"clear"><"fg-toolbar ui-widget-header ui-corner-tl ui-corner-tr ui-helper-clearfix"lfr>t<"fg-toolbar ui-widget-header ui-corner-bl ui-corner-br ui-helper-clearfix"ip>'
    bProcessing: true
    bServerSide: true
    fnRowCallback: (nRow, aData, iDisplayIndex, iDisplayIndexFull) -> 
      $('td:eq(7)', nRow).html( '<a href="<%= web_root + url.view_wwpns_san_infras_path %>?id=' + aData[7]  + '" class="btn btn-mini btn-primary" data-remote="true" data-target="#modal-wwpn" data-toggle="modal">' + 'view wwpns' + '</a>' )
    sAjaxSource: $('#san_datatable').data('source')  
    
$(document).ready(ready)
$(document).on('page:load', ready)